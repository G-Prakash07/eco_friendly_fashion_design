doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Donate Clothes - Fashion Design Eco-friendly
    link(rel="stylesheet", href="/donation.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    include navbar.pug

    section.donate-hero
      .container
        h1 Donate Your Clothes
        p Help us give old garments a new life by donating items below.

    section.donate-form
      .container
        form(method="POST", action="/donate")
          // if you have user sessions, you can skip name/email for logged‐in users
          if !loggedIn
            .form-group
              label(for="name") Your Name
              input(type="text", id="name", name="name", required)

            .form-group
              label(for="email") Your Email
              input(type="email", id="email", name="email", required)

          .form-group
            label(for="item") Select Item to Donate
            select(id="item", name="item_id", required)
              option(value="") -- Choose an Item --
              each itm in items
                option(value=itm.item_id)= itm.title + ' (' + itm.condition + ')'

          .form-group
            label(for="quantity") Quantity
            input(type="number", id="quantity", name="quantity", min="1", value="1", required)

          button(type="submit") Donate Now

    footer
      p © 2025 Fashion Design Eco-friendly | All rights reserved
