doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Contact Us - Fashion Design Eco-friendly
    link(rel="stylesheet", href="/contact.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    include navbar.pug

    section.contact-hero
      h1 Contact Us
      p We would love to hear from you! Please fill out the form below for any inquiries or feedback.

    section.contact-form
      form(method="POST", action="/submit-contact")
        div.form-group
          label(for="name") Name:
          input(type="text", id="name", name="name", required=true)
        
        div.form-group
          label(for="email") Email:
          input(type="email", id="email", name="email", required=true)
        
        div.form-group
          label(for="subject") Subject:
          input(type="text", id="subject", name="subject", required=true)
        
        div.form-group
          label(for="message") Message:
          textarea(id="message", name="message", rows="4", required=true) 

        button(type="submit") Submit

